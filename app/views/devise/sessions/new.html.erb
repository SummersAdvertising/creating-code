<!doctype html>
<html>
<head>
<!--[if lt IE 9]>
<script src="js/html5.js"></script>
<link rel="stylesheet" href="css/desktop.css">
<![endif]-->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
<meta name="Robots" content="index,follow"/>
<meta http-equiv="content-language" content="zh-TW" />
<title>創碼後台管理系統</title>
  <%= stylesheet_link_tag    "admin", :media => "all" %>
  
  <%= stylesheet_link_tag    "rwd/mobile", :media => "screen and (max-width: 543px)" %>
  <%= stylesheet_link_tag    "rwd/tablet", :media => "screen and (min-width: 544px) and (max-width: 896px)" %>
  <%= stylesheet_link_tag    "rwd/desktop", :media => "screen and (min-width: 897px)" %>
  
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>

<body>
<header _height="none">
  <section id="top"> <a id="nav-ctrl"><img src="<%# image_path("nav.png") %>"></a>
    <div class="left">
      <h1><a href="<%= admin_posts_path %>">創碼後台管理系統</a></h1>
    </div>
    <!--left-->
    <aside> <a id="aside-ctrl"><img src="<%# image_path("set.png") %>"></a>
      <div id="aside-box"> <a href="<%= root_url %>">返回首頁</a> </div>
    </aside>
  </section>
  <!--top--> 
</header>

<section id="main" _height="auto" class="login-main">
  <section id="vert">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <section class="login">
      <ul>
        <li>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <th align="center"><%= f.label :email, "帳號" %></th>
              <td><%= f.email_field :email, :autofocus => true %></td>
            </tr>
          </table>
        </li>
        <li>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <th align="center"><%= f.label :password, "密碼" %></th>
              <td><%= f.password_field :password %></td>
            </tr>
          </table>
        </li>
      </ul>
      
      

  <% if devise_mapping.rememberable? && false -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  
      <section class="entrance button"> <%= f.submit "Sign in", { :style => "display: none;" } %><a href="javascript: $('input:submit').click();">登入</a> </section>
      <!--button--> 
    </section>
<% end %>
  </section>
  <!--vert--> 
</section>
<!--main-->

<footer _height="none"> Copyright © <a href="http://www.summers.com.tw/" target="_blank">Summers</a> </footer>
</body>
</html>