<meta http-equiv="content-language" content="zh-TW" />
<title>創碼後台管理系統</title>

  <%= stylesheet_link_tag    "admin", :media => "all" %>
  
  <%= stylesheet_link_tag    "rwd/mobile", :media => "screen and (max-width: 543px)" %>
  <%= stylesheet_link_tag    "rwd/tablet", :media => "screen and (min-width: 544px) and (max-width: 896px)" %>
  <%= stylesheet_link_tag    "rwd/desktop", :media => "screen and (min-width: 897px)" %>
  
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
  
</head>

<body>
<header _height="none">
  <section id="top"> <a id="nav-ctrl"><img src="<%= image_path("nav.png") %>"></a>
    <div class="left">
      <h1><a href="<%= admin_posts_path %>">創碼後台管理系統</a></h1>
    </div>
    <!--left-->
    <aside> <a id="aside-ctrl"><img src="<%= image_path("set.png") %>"></a>
      <div id="aside-box"> <a href="<%= edit_admin_user_path( :id => current_user.id ) %>">修改個人資料</a> <%= link_to "登出", destroy_user_session_path, :method => :delete  %> <a href="<%= root_url %>">返回首頁</a> </div>
    </aside>
  </section>
  <!--top--> 
</header>

<section id="main" _height="auto">
  <nav>
    <ul>
      <li <%= 'class="active"'.html_safe if params[ :controller ] == 'admin/posts' %>><a href="<%= admin_posts_path %>" id="nav-1">FAQ</a></li>
      <li <%= 'class="active"'.html_safe if params[ :controller ] == 'admin/users' %>><a href="<%= admin_users_path %>" id="nav-2">使用者管理</a></li>
    </ul>
  </nav>
  <article>
  
  <%= yield %>
  
  </article>
</section>
<!--main-->

<footer _height="none"> Copyright © <a href="http://www.summers.com.tw/" target="_blank">Summers</a> </footer>
